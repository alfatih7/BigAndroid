<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewChallenge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".codec.cc5.MainActivityChallenge5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_item1"
            style="@style/txt_item_list" />

        <TextView
            android:id="@+id/txt_item2"
            style="@style/txt_item_list" />

        <TextView
            android:id="@+id/txt_item3"
            style="@style/txt_item_list" />

        <TextView
            android:id="@+id/txt_item4"
            style="@style/txt_item_list" />

        <TextView
            android:id="@+id/txt_item5"
            style="@style/txt_item_list" />

        <TextView
            android:id="@+id/txt_item6"
            style="@style/txt_item_list" />

        <TextView
            android:id="@+id/txt_item7"
            style="@style/txt_item_list" />

        <TextView
            android:id="@+id/txt_item8"
            style="@style/txt_item_list" />

        <TextView
            android:id="@+id/txt_item9"
            style="@style/txt_item_list" />

        <TextView
            android:id="@+id/txt_item10"
            style="@style/txt_item_list" />

        <Button
            android:id="@+id/button_add_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="#0277BD"
            android:text="@string/add_item_button"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>


</ScrollView>